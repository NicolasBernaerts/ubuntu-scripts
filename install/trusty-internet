#!/usr/bin/env bash
# -------------------------------------------------------
# Script to install internet tools
#
# 20/12/2014, V1.0 - Creation by N. Bernaerts
# 10/01/2015, V1.1 - Use clipgrab team PPA
# 01/03/2015, V1.2 - Add nmap for port detection
# 07/05/2015, V1.3 - Add Viber
# -------------------------------------------------------

# Check to ensure the script is run as root/sudo
if [ "$(id -u)" != "0" ];
then
echo "This script must be run as root." 1>&2
exit 1
fi

# nmap
apt-get -y install nmap

# thunderbird
apt-get -y install thunderbird thunderbird-locale-fr thunderbird-gnome-support

# chromium & filezilla
apt-get -y install chromium-browser filezilla

# Firefox : Hangout plugin
wget --header='Accept-Encoding:none' https://dl.google.com/linux/direct/google-talkplugin_current_${ARCHI}.deb
gdebi --n google-talkplugin_current_*.deb

# youtube-dl & gui
add-apt-repository -y ppa:nilarimogard/webupd8
apt-get update
apt-get -y install youtube-dl youtube-dlg

# clipgrab (from PPA)
#URL_CLIPGRAB=$(wget -q -O - clipgrab.htm http://clipgrab.org/ | grep "tar.gz" | sed 's/^.*=.\(.*\).>/\1/')
#wget -O clipgrab.tar.gz $URL_CLIPGRAB
#tar -xzf clipgrab.tar.gz
#mv ./clipgrab-*/clipgrab /usr/local/bin/clipgrab
#chmod +x /usr/local/bin/clipgrab
#wget -O /usr/share/applications/clipgrab.desktop https://raw.githubusercontent.com/NicolasBernaerts/ubuntu-scripts/master/clipgrab/clipgrab.desktop
#rm -R clipgrab*
add-apt-repository -y ppa:clipgrab-team/ppa
apt-get update
apt-get install clipgrab

# skype 4.3
wget --header='Accept-Encoding:none' http://download.skype.com/linux/skype-ubuntu-precise_4.3.0.37-1_i386.deb
dpkg --force-all -i skype-ubuntu-precise_*.deb
apt-get -y -f install

# viber
wget --header='Accept-Encoding:none' http://download.cdn.viber.com/cdn/desktop/Linux/viber.deb
dpkg -i viber.deb

# telegram client (launch Telegram from command line once to get desktop declaration)
[ "$ARCHI" = "amd64" ] && TELEGRAM_URL="https://tdesktop.com/linux" || TELEGRAM_URL="https://tdesktop.com/linux32"
wget --header='Accept-Encoding:none' -O tsetup.tar.xz $TELEGRAM_URL
tar xf tsetup.tar.xz -C /usr/local/bin
/usr/local/bin/Telegram/Telegram &
